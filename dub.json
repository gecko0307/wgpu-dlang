{
    "name": "main",
    "description": "Dagon over WebGPU",
    "authors": [
        "Timur Gafarov"
    ],
    "copyright": "Copyright Â© 2021, Timur Gafarov",
    "license": "BSL-1.0",
    
    "dependencies": {
        "dlib": "~>1.2.0",
        "bindbc-wgpu": "~master",
        "bindbc-sdl": "~>1.0.1"
    },
    
    "importPaths": [
        "src",
        "thirdparty/stb-2.0.1/source"
    ],
    
    "sourcePaths": [
        "src",
        "thirdparty/stb-2.0.1/source"
    ],
    
    "versions": [
        "SDL_2014"
    ],
    
    "buildRequirements":[
        "allowWarnings"
    ],
    
    "libs-windows-x86": [
        "$PACKAGE_DIR/thirdparty/stb-2.0.1/bin/stb_x86"
    ],
    "libs-windows-x86_64": [
        "user32",
        "$PACKAGE_DIR/thirdparty/stb-2.0.1/bin/stb_x64"
    ],
    "lflags-linux-x86_64": [
        "$PACKAGE_DIR/thirdparty/stb-2.0.1/bin/libstb.a"
    ],
    
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"]
}