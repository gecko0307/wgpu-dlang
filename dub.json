{
    "name": "main",
    "description": "",
    "homepage": "",
    "license": "Boost",
    "authors": [
        "Timur Gafarov"
    ],
    
    "dependencies": {
        "bindbc-sdl": "~>0.8.0",
        "bindbc-wgpu": "~>0.1.0-alpha2",
        "dlib": "~>0.16.0"
    },
    
    "versions": [
        "SDL_207"
    ],

    "importPaths": [
        "src"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],

    "sourcePaths": ["src"],
    "mainSourceFile": "src/main.d",

    "configurations": [
        {
            "name": "application",
            "targetType": "executable"
        }
    ],
    
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],
    
    "preGenerateCommands": [
        "glslangValidator shaders/cube.vert -V -o shaders/cube.vert.spv",
        "glslangValidator shaders/cube.frag -V -o shaders/cube.frag.spv"
    ]
}

